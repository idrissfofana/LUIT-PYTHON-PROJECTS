import random

#Assigning a variable to a random number
hidden_number = random.randint(0, 100)


# user will input a new number untill condition is met 

while not False:

    # Setting guess number to a variable
    
    guess_number = int(input("Please enter number :"))

    if guess_number < hidden_number:
        print("Your number is too low, try again ")
    elif guess_number > hidden_number:
        print("Your number is too high, try again ")
    elif guess_number == hidden_number:
        print("Congratulation you got it")
  #the break will stop the game once the user guess the number correctly
        
        break
        
